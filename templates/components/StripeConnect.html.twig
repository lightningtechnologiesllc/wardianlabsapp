<div {{ attributes }}>
    <div class="relative w-3/4 mt-2 m-auto">
        <input type="email" name="email"
               placeholder="Enter your subscription email"
               class="w-full rounded-lg border border-stroke bg-transparent py-3 pl-12 pr-4 text-dark placeholder-dark-6 outline-hidden focus:border-primary dark:border-dark-3 dark:text-white dark:placeholder-dark-5"
               data-model="norender|stripeUserData.email"
            {% if this.hasValidSubscription %}disabled{% endif %}
        />
        <span class="absolute left-0 top-0 flex h-full w-12 items-center justify-center text-dark-5">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path
                d="M17.5 3H2.5C1.4375 3 0.53125 3.875 0.53125 4.96875V15.0937C0.53125 16.1562 1.40625 17.0625 2.5 17.0625H17.5C18.5625 17.0625 19.4687 16.1875 19.4687 15.0937V4.9375C19.4687 3.875 18.5625 3 17.5 3ZM17.5 4.40625C17.5312 4.40625 17.5625 4.40625 17.5937 4.40625L10 9.28125L2.40625 4.40625C2.4375 4.40625 2.46875 4.40625 2.5 4.40625H17.5ZM17.5 15.5938H2.5C2.1875 15.5938 1.9375 15.3438 1.9375 15.0312V5.78125L9.25 10.4687C9.46875 10.625 9.71875 10.6875 9.96875 10.6875C10.2187 10.6875 10.4687 10.625 10.6875 10.4687L18 5.78125V15.0625C18.0625 15.375 17.8125 15.5938 17.5 15.5938Z"
                fill="currentColor">
            </path>
          </svg>
        </span>
    </div>

    {% if _errors.has('stripeUserData.email') %}
        <div class="mt-[10px] text-sm alert alert-danger w-3/4 m-auto">
            {{ _errors.get('stripeUserData.email') }}
        </div>
    {% endif %}
    {% if this.hasValidSubscription %}
        <div class="alert alert-success mt-4 w-3/4 m-auto">
            Yay! You have a valid subscription.
        </div>
    {% endif %}

    {% if not this.hasValidSubscription %}
            <div>
                <button
                    data-loading="action(checkEmail)|show"
                    disabled class="button primary disabled">
                    <svg aria-hidden="true" role="status" class="inline w-4 h-4 me-3 text-white animate-spin"
                         viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z"
                            fill="#E5E7EB"/>
                        <path
                            d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z"
                            fill="currentColor"/>
                    </svg>
                    Loading...
                </button>
                <button {{ live_action('checkEmail') }}
                    data-loading="action(checkEmail)|hide"
                    class="button primary">
                    Check
                </button>
            </div>
    {% else %}
        <p class="mt-8">We sent you an OTP code to your email address</p>
        <div class="relative w-1/2 mt-2 m-auto">
            <input type="text" name="otp"
                   placeholder="Enter the OTP sent to your email"
                   class="w-full rounded-lg border border-stroke bg-transparent py-3 pl-12 pr-4 text-dark placeholder-dark-6 outline-hidden focus:border-primary dark:border-dark-3 dark:text-white dark:placeholder-dark-5"
                   data-model="norender|stripeUserData.otpCode"
            />
            <span class="absolute left-0 top-0 flex h-full w-12 items-center justify-center text-dark-5">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 15 15">
                    <path
                        fill="none" stroke="currentColor"
                        d="M6 5.5h3m-1.5 0V10m3 0V7.5m0 0v-2h1a1 1 0 1 1 0 2zm-6-1v2a1 1 0 0 1-2 0v-2a1 1 0 0 1 2 0Zm-3-6h12a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-12a1 1 0 0 1-1-1v-12a1 1 0 0 1 1-1Z"
                    />
                </svg>
            </span>
        </div>

        {% if _errors.has('stripeUserData.otpCode') %}
            <div class="mt-[10px] text-sm alert alert-danger w-3/4 m-auto">
                {{ _errors.get('stripeUserData.otpCode') }}
            </div>
        {% endif %}

        <div>
            <button
                data-loading="action(connectEmail)|show"
                disabled class="button primary disabled">
