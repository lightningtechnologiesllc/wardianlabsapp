{% extends 'base.html.twig' %}

{% block title %}Account Linked Successfully{% endblock %}

{% block body %}
    <div class="mt-8 px-8 text-tailgrids-black">
        <div class="flex item-center relative">
            <div class="text-left m-auto w-full align-middle">
                <div>
                    <h3 class="text-3xl font-bold leading-6">{{ "Account Linked Successfully" | trans }}</h3>
                </div>
            </div>
        </div>
    </div>

    <section id="success" class="mt-10 px-8 relative z-10 overflow-hidden bg-white">
        <section class="pb-10 pt-20 lg:pb-20 lg:pt-[120px] dark:bg-dark">
            <div class="container mx-auto sm: md:w-3/4 xl:w-1/2">
                <div class="bg-green-50 border border-green-200 rounded-lg p-8">
                    <div class="flex items-center justify-center mb-6">
                        <svg class="w-16 h-16 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>

                    <h2 class="text-2xl font-bold text-center text-green-800 mb-4">
                        Your subscription is now linked!
                    </h2>

                    <div class="text-center mb-6">
                        <p class="text-gray-700 mb-2">
                            Your Discord account has been successfully linked to your Stripe subscription.
                        </p>
                        <p class="text-gray-700">
                            You should now have access to your exclusive Discord roles and channels.
                        </p>
                    </div>

                    {% if discord_user %}
                        <div class="bg-white rounded-lg p-6 mb-6">
                            <h3 class="text-lg font-semibold mb-4 text-center">Discord Account</h3>
                            <div class="flex items-center justify-center">
                                <div class="flex items-center">
                                    {% if discord_user.avatar %}
                                        <img
                                            class="w-16 h-16 rounded-full mr-4"
                                            src="https://cdn.discordapp.com/avatars/{{ discord_user.id }}/{{ discord_user.avatar }}.png"
                                            alt="{{ discord_user.globalName }}"
                                        />
                                    {% endif %}
                                    <div>
                                        <p class="font-semibold text-gray-900">{{ discord_user.globalName }}</p>
                                        <p class="text-sm text-gray-600">@{{ discord_user.username }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                        <p class="text-sm text-blue-800">
                            <strong>Next steps:</strong> Open Discord and check your server access.
                            Your roles should be assigned automatically. If you don't see your roles immediately,
                            please allow a few minutes for the changes to take effect.
                        </p>
                    </div>

                    <div class="text-center">
                        <a href="https://discord.com/channels/@me"
                           class="inline-block button bg-indigo-600 text-white py-3 px-8 rounded-lg hover:bg-indigo-700 transition-colors">
                            Go to Discord
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </section>
{% endblock %}
