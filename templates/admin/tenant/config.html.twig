{% extends 'admin/base.html.twig' %}

{% form_theme form _self %}

{% block form_errors %}
    {% if errors|length > 0 %}
        <div class="mt-2">
            {% for error in errors %}
                <p class="text-sm text-red-600 dark:text-red-400">{{ error.message }}</p>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}

{% block title %}Tenant Configuration{% endblock %}

{% block body %}


    <div class="min-h-full">
        <div class="bg-indigo-600 pb-32 dark:bg-indigo-800">
            {% include 'admin/_menus/top_bar.html.twig' %}
            <header class="py-10">
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                    <h1 class="text-3xl font-bold tracking-tight text-white">Tenant Configuration</h1>
                </div>
            </header>
        </div>

        <main class="-mt-32">
            <div class="mx-auto max-w-7xl px-4 pb-12 sm:px-6 lg:px-8">
                {% if flash.has('message') %}
                    <div class="mb-4 rounded-lg bg-green-50 p-4 text-sm text-green-800 dark:bg-green-900/20 dark:text-green-400">
                        {{ flash.get('message') }}
                    </div>
                {% endif %}

                {{ form_start(form, {'action': url('admin_tenant_config'), 'method': 'POST', 'attr': {'data-turbo': 'false'}}) }}
                    <div class="space-y-12">
                        <div
                            class="rounded-lg bg-white px-5 py-6 shadow-sm sm:px-6 dark:bg-gray-800 dark:shadow-none dark:outline-1 dark:-outline-offset-1 dark:outline-white/10">
                            <div
                                class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 pb-12 md:grid-cols-3 dark:border-white/10">
                                <div>
                                    <h2 class="text-base/7 font-semibold text-gray-900 dark:text-white">Config</h2>
                                    <p class="mt-1 text-sm/6 text-gray-600 dark:text-gray-400">
                                        This is the main configuration for your tenant.
                                    </p>
                                </div>

                                <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2" data-controller="toggle-email-fields">
                                    <div class="sm:col-span-4">
                                        {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm/6 font-medium text-gray-900 dark:text-white'}}) }}
                                        {% if form.name.vars.help %}
                                            <p class="mt-1 text-sm/6 text-gray-600 dark:text-gray-400">
                                                {{ form.name.vars.help }}
                                            </p>
                                        {% endif %}
                                        <div class="mt-2">
                                            <div
                                                class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600 dark:bg-white/5 dark:outline-white/10 dark:focus-within:outline-indigo-500">
                                                {{ form_widget(form.name) }}
                                            </div>
                                            {{ form_errors(form.name) }}
                                        </div>
                                    </div>
                                    <div class="sm:col-span-4">
                                        {{ form_label(form.subdomain, null, {'label_attr': {'class': 'block text-sm/6 font-medium text-gray-900 dark:text-white'}}) }}
                                        {% if form.subdomain.vars.help %}
                                            <p class="mt-1 text-sm/6 text-gray-600 dark:text-gray-400">
                                                {{ form.subdomain.vars.help }}
                                            </p>
                                        {% endif %}
                                        <div class="mt-2">
                                            <div
                                                class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600 dark:bg-white/5 dark:outline-white/10 dark:focus-within:outline-indigo-500"
                                                data-controller="clipboard"
                                                data-clipboard-suffix-value=".{{ main_domain }}">
                                                {{ form_widget(form.subdomain, {'attr': {'data-clipboard-target': 'source'}}) }}

                                                <div
                                                    class="shrink-0 text-base text-gray-500 select-none sm:text-sm/6 dark:text-gray-400">
                                                    .{{ main_domain }}
                                                </div>

                                                <button
                                                    type="button"
                                                    class="shrink-0 p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300"
                                                    data-clipboard-target="button"
                                                    data-action="clipboard#copy"
                                                    title="Copy full domain">
                                                    <svg class="size-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0 0 13.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 0 1-.75.75H9.75a.75.75 0 0 1-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 0 1-2.25 2.25H6.75A2.25 2.25 0 0 1 4.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 0 1 1.927-.184" />
                                                    </svg>
                                                </button>
                                            </div>
                                            {{ form_errors(form.subdomain) }}
                                        </div>
                                    </div>
                                    <div class="sm:col-span-4">
                                        <div class="flex items-center gap-x-3">
                                            {{ form_widget(form.useCustomEmail) }}
                                            {{ form_label(form.useCustomEmail, null, {'label_attr': {'class': 'text-sm/6 font-medium text-gray-900 dark:text-white'}}) }}
                                        </div>
                                        {% if form.useCustomEmail.vars.help %}
                                            <p class="mt-1 text-sm/6 text-gray-600 dark:text-gray-400">
                                                {{ form.useCustomEmail.vars.help }}
                                            </p>
                                        {% endif %}
                                        {{ form_errors(form.useCustomEmail) }}
                                    </div>
                                    <div class="sm:col-span-4 mb-6" data-toggle-email-fields-target="container">
                                        {{ form_label(form.emailDSN, null, {'label_attr': {'class': 'block text-sm/6 font-medium text-gray-900 dark:text-white'}}) }}

                                        {% if form.emailDSN.vars.help %}
                                            <p class="mt-1 text-sm/6 text-gray-600 dark:text-gray-400">
                                                {{ form.emailDSN.vars.help }}
                                            </p>
                                        {% endif %}
                                        <div class="mt-2">
                                            <div
                                                class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600 dark:bg-white/5 dark:outline-white/10 dark:focus-within:outline-indigo-500">
                                                {{ form_widget(form.emailDSN) }}
                                            </div>
                                            {{ form_errors(form.emailDSN) }}
                                        </div>
                                    </div>
                                    <div class="sm:col-span-4 mb-6" data-toggle-email-fields-target="container">
                                        {{ form_label(form.emailFromAddress, null, {'label_attr': {'class': 'block text-sm/6 font-medium text-gray-900 dark:text-white'}}) }}

                                        {% if form.emailFromAddress.vars.help %}
                                            <p class="mt-1 text-sm/6 text-gray-600 dark:text-gray-400">
                                                {{ form.emailFromAddress.vars.help }}
                                            </p>
                                        {% endif %}
                                        <div class="mt-2">
                                            <div
                                                class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600 dark:bg-white/5 dark:outline-white/10 dark:focus-within:outline-indigo-500">
                                                {{ form_widget(form.emailFromAddress) }}
                                            </div>
                                            {{ form_errors(form.emailFromAddress) }}
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="mt-2 w-full items-center text-right gap-x-6">
                                <a href="{{ url('admin_tenant_config') }}" class="button">Cancel</a>
                                <button type="submit" class="button primary">Save</button>
                            </div>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </main>
    </div>
{% endblock %}
