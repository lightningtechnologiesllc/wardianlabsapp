{% extends 'admin/base.html.twig' %}

{% block title %}Subscription Required{% endblock %}

{% block body %}
    <div class="min-h-full">
        <div class="bg-indigo-600 pb-32 dark:bg-indigo-800">
            <nav class="border-b border-indigo-300/25 bg-indigo-600 dark:bg-indigo-800 lg:border-none">
                <div class="mx-auto max-w-7xl px-2 sm:px-4 lg:px-8">
                    <div class="relative flex h-16 items-center justify-between lg:border-b lg:border-indigo-400/25">
                        <div class="flex items-center px-2 lg:px-0">
                            <div class="shrink-0">
                                <span class="text-xl font-bold text-white">WardianLabs</span>
                            </div>
                        </div>
                        <div class="flex items-center">
                            <span class="text-sm text-indigo-200">{{ user.globalName ?: user.username }}</span>
                        </div>
                    </div>
                </div>
            </nav>
            <header class="py-10">
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                    <h1 class="text-3xl font-bold tracking-tight text-white">Subscription</h1>
                </div>
            </header>
        </div>

        <main class="-mt-32">
            <div class="mx-auto max-w-7xl px-4 pb-12 sm:px-6 lg:px-8">
                <div class="overflow-hidden rounded-lg bg-white shadow dark:bg-gray-800">
                    <div class="p-6 sm:p-8">
                        {% for message in app.flashes('success') %}
                            <div class="mb-6 p-4 rounded-lg bg-green-50 border border-green-200 text-green-800 dark:bg-green-900/20 dark:border-green-800 dark:text-green-400">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-800 dark:bg-red-900/20 dark:border-red-800 dark:text-red-400">
                                {{ message }}
                            </div>
                        {% endfor %}

                        <div class="text-center mb-8">
                            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-yellow-100 dark:bg-yellow-900/20 mb-4">
                                <svg class="w-8 h-8 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                            </div>
                            <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Subscription Required</h2>
                            <p class="text-gray-500 dark:text-gray-400">
                                You need an active subscription to access this feature.
                            </p>
                        </div>

                        <div class="max-w-md mx-auto">
                            <div class="bg-gray-50 dark:bg-gray-900/50 rounded-xl p-6 mb-6">
                                <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Have a coupon code?</h3>

                                {{ form_start(form, {'attr': {'class': 'space-y-4', 'data-turbo': 'false'}}) }}
                                    {% for error in form.vars.errors %}
                                        <p class="text-sm text-red-600 dark:text-red-400">{{ error.message }}</p>
                                    {% endfor %}
                                    <div>
                                        {{ form_label(form.couponCode, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                                        {{ form_widget(form.couponCode) }}
                                        {% for error in form.couponCode.vars.errors %}
                                            <p class="mt-2 text-sm text-red-600 dark:text-red-400">{{ error.message }}</p>
                                        {% endfor %}
                                    </div>

                                    <div class="mt-4 flex justify-center">
                                        <button type="submit" class="bg-indigo-600 hover:bg-indigo-500 text-white rounded-lg px-4 py-2 text-sm font-semibold shadow-sm transition">
                                            Activate Subscription
                                        </button>
                                    </div>
                                {{ form_end(form) }}
                            </div>

                            <div class="text-center">
                                <p class="text-gray-500 dark:text-gray-400 text-sm mb-4">Don't have a subscription yet?</p>
                                <a href="https://wardianlabs.com/#pricing" class="text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300 text-sm font-medium">
                                    View pricing plans
                                </a>
                            </div>

                            <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700 text-center">
                                <a href="{{ path('admin_discord_disconnect') }}" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300 text-sm">
                                    Sign out
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
